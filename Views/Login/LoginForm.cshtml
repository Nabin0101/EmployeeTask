@model EmployeeTask.Models.LoginSignupModel
@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background-color: #e3f2fd;
    }

    .login-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        max-width: 600px;
        margin: 50px auto;
    }

    .login-image {
        background: url('https://img.freepik.com/free-vector/login-concept-illustration_114360-739.jpg?t=st=1721372157~exp=1721375757~hmac=c22029e6d1b5c0b1698b002d46f3e3d4cb76e78f3aa4e51f0efb37958a2709cc&w=740') no-repeat center center;
        background-size: cover;
    }

    .login-form {
        padding: 30px;
    }

        .login-form h2 {
            margin-bottom: 20px;
        }

    .form-floating > .form-control,
    .form-floating > .form-select {
        border-radius: 0.5rem;
    }

    .btn-primary {
        background-color: #4956ac;
        border-color: #4956ac;
    }
</style>

<div class="container login-container d-flex flex-row">
    <div class="col-md-6 login-image d-none d-md-block"></div>
    <div class="col-md-6 login-form">
        <h2 class="text-center">Login</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <div class="form-floating">
                    <input type="text" class="form-control" id="username" name="UserName" placeholder="Username" required>
                    <label for="username">Username</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Password" required>
                    <label for="password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 mt-4">Login</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
