@model EmployeeTask.Models.Positions

<h2>Create Position</h2>

<form asp-action="AddPosition" method="post">
    <div class="form-group">
        <label asp-for="PositionName" class="control-label"></label>
        <input asp-for="PositionName" class="form-control form-control-sm" style="max-width: 300px;" />
        <span asp-validation-for="PositionName" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Add Position" class="btn btn-primary" />
    </div>
</form>
